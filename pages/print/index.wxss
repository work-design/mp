page {
  color: #333;
  display: flex;
  flex-direction: column;
}

.connected_info {
  flex-grow: 0;
  padding: 20px;
  margin-bottom: env(safe-area-inset-bottom);
  font-size: 14px;
  min-height: 100px;
}
.connected_info .operation {
  position: absolute;
  display: inline-block;
  right: 30px;
}


.devices_summary {
  padding: 40px 10px 10px;
  font-size: 16px;
}

.device_list {
  flex-grow: 1;
  height: 300px;
  margin: 50px 5px;
  margin-top: 0;
  border: 1px solid #EEE;
  border-radius: 5px;
  width: auto;
}
.device_item {
  display: flex;
  border-bottom: 1px solid #EEE;
  padding: 10px;
  color: #666;
}
.device_item__left {
  flex-grow: 1;
}
.device_item__right {
  width: 20px;
}
.device_item_hover {
  background-color: rgba(0, 0, 0, .1);
}

