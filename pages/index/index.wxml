<page-meta>
  <navigation-bar background-color="#fff" front-color="#000"></navigation-bar>
</page-meta>

<web-view wx:if="{{userInfo}}" src="{{host}}{{path}}?auth_token={{authToken}}#wechat_redirect"></web-view>

<view wx:else class="container">
  <view class="userinfo-avatar">
    <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
      <image class="avatar" src="{{avatarUrl}}"></image>
    </button>
    <input type="nickname" class="weui-input" placeholder="请输入昵称"/>
  </view>
  <view class="userinfo">
    <button wx:if="{{onlyLogin}}" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">微信快捷登录</button>
    <view wx:else>
      <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">微信快捷登录</button>
      <navigator url="/pages/home/index" class="weui-btn">浏览服务</navigator>
      <navigator url="/pages/print/config/index" class="weui-btn">打印机</navigator>
    </view>
  </view>
</view>
