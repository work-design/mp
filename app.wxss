page {
  height: 100%;
}

.pt-1 {
  padding-top: 0.25rem;
}

.mt-1 {
  margin-top: 0.25rem;
}

.mt-4 {
  margin-top: 1rem;
}

.weui-badge {
  align-items: center;
  font-size: 0.8rem;
  color: aliceblue;
  border-radius: 4px;
  display: inline-flex;
  height: 2em;
  justify-content: center;
  line-height: 1.5;
  padding-left: 0.75em;
  padding-right: 0.75em;
  white-space: nowrap;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.text-centered {
  text-align: center;
}

.text-sm {
  font-size: 0.8rem;
}

.center {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
  color: darkgrey;
}
